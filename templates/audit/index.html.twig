{% extends 'base.html.twig' %}

{% block title %}Audit index{% endblock %}

{% block body %}
    <h1>Audit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for audit in audits %}
            <tr>
                <td>{{ audit.id }}</td>
                <td>{{ audit.name }}</td>
                <td>
                    <a href="{{ path('app_audit_show', {'id': audit.id}) }}">show</a>
                    <a href="{{ path('app_audit_edit', {'id': audit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_audit_new') }}">Create new</a>
{% endblock %}
